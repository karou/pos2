{
  "name": "mayura-pos",
  "version": "1.0.0",
  "description": "MayuraPOS - Point of Sale System with Microservices Architecture",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "client": "cd client && npm start",
    "server": "nodemon server/index.js",
    "dev:all": "concurrently \"npm run server\" \"npm run client\"",
    "install:all": "npm install && cd client && npm install",
    "build": "cd client && npm run build",
    "test": "jest",
    "seed": "node scripts/seed.js",
    "setup": "node setup.js",
    "start:order-service": "node server/microservices/order-service/index.js",
    "start:inventory-service": "node server/microservices/inventory-service/index.js",
    "start:notification-service": "node server/microservices/notification-service/index.js",
    "start:all-services": "concurrently \"npm run start\" \"npm run start:order-service\" \"npm run start:inventory-service\" \"npm run start:notification-service\"",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:restart": "docker-compose restart",
    "docker:logs": "docker-compose logs",
    "docker:status": "docker-compose ps",
    "docker:utils": "node scripts/docker-utils.js",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:backup": "node -e \"require('./scripts/docker-utils').backupMongoDB()\"",
    "docker:restore": "node -e \"require('./scripts/docker-utils').restoreMongoDB()\"",
    "docker:prune": "docker system prune -f"
  },
  "keywords": [
    "pos",
    "point-of-sale",
    "microservices",
    "react",
    "nodejs",
    "mongodb",
    "redis",
    "rabbitmq",
    "pwa"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "amqplib": "^0.10.3",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "redis": "^4.6.8",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  }
}
